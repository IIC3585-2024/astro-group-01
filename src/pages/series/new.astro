---
import Layout from "../../layouts/layout.astro"
---

<style>
    form {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    label {
        font-weight: bold;
    }

    input {
        padding: 0.5rem;
        border-radius: 0.25rem;
        border: 1px solid #ccc;
    }

    button {
        padding: 0.5rem;
        border-radius: 0.25rem;
        color: #232328;
        border: none;
        background-color: hsl(224, 100%, 85%);
        width: 70%;
        margin: auto;
        font-weight: 600;
        transition: ease 0.2s;
    }

    button:hover {
        cursor: pointer;
        scale: 1.05;
        box-shadow: 0px 0px 5px hsl(224, 100%, 85%);
    }

    a {
        color: #C1C3C8;
    }

    a:hover {
        text-decoration: underline;
    }

    section{
        width: 80%;
        margin: auto;
    }

    @media (min-width: 720px) {
        section{
            width: 60%;
        }
    }

    label{
        color: #C1C3C8;
    }
</style>

<Layout title="New Series - AstroFilms">
    <section>
        <h1>New series</h1>
        <form method="post" action="/api/series">
            <label for="name">Series name</label>
            <input name="name" id="name" required/><br />
            <label for="streamingService">Streaming service</label>
            <input name="streamingService" id="streamingService" required/><br />
            <label for="episodesPerSeason">Episodes per season</label>
            <input
                type="text"
                name="episodesPerSeason"
                id="episodesPerSeason"
                title="Input should be written like: 1,2,3"
                required
            /><br />
            <label for="description">Description</label>
            <input name="description" id="description" required/><br />
            <label for="category">Category</label>
            <input name="category" id="category" required/><br />
            <label for="poster">Poster URL (optional)</label>
            <input name="poster" id="poster"/><br />
            <button type="submit">Add</button>
            <p id="form-error"></p>
        </form>
        <a href="/catalog">Go back</a>
    </section>
</Layout>

<script>
    const errorMessageElement = document.getElementById("form-error")!;

    document.forms[0].addEventListener("submit", async (e) => {
        e.preventDefault();
        errorMessageElement.innerText = "";
        const formElement = e.target as HTMLFormElement;
        const response = await fetch(formElement.action, {
            method: formElement.method,
            body: new FormData(formElement),
        });
        if (response.ok) {
            window.location.href = "/catalog";
        } else {
            errorMessageElement.innerText = (await response.json()).error;
        }
    });
</script>
